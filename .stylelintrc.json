{
  "extends": "stylelint-config-standard",
  "rules": {
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "extends",
        "tailwind",
        "layer"
      ]
    }],
    "block-no-empty": null,
    "unit-allowed-list": ["em", "rem", "s", "px","%", "vw,", "deg", "vmin", "vh", "deg", "turn"]
  },
  "ignoreFiles": ["build/**", "dist/**", "**/reset*.css", "**/bootstrap*.css", "**/*.js", "**/*.jsx"]
}